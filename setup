#!/bin/bash

sudo chmod +x main
sudo chmod +x remove
./main
sudo touch /bin/startupinfo
sudo chmod +x /bin/startupinfo
sudo bash -c 'cat <<EOF > /bin/startupinfo
#!/bin/bash

a1=1
read -p "Command: " command
if [ "\$command" = "halt" ]; then
  if [ \$a1 -eq 1 ]; then
    a=15
    while [ \$a -gt 0 ]; do
      sed -i "\$ d" ~/.bashrc
      a=\$((a-1))
    done
    a1=0
  fi
elif [ "\$command" = "run" ]; then
  if [ \$a1 -eq 0 ]; then
    {
    echo "# .startupinfo v1.2"
    i="\$(whoami)@\$(uname -n)"
    echo "\$i"
    length=\${#i}
    after=""
    clear
    while [ \$length -gt 0 ]; do
      after+=-
      length=\$((length-1))
    done
    echo "\$after"
    echo "OS:             \$(uname -o)"
    echo "Processor:      \$(uname -p)"
    echo "Hardware Info:  \$(uname -m)"
    echo "Kernel Name:    \$(uname)"
    echo "Kernel Version: \$(uname -v)"
    echo "Kernel Release: \$(uname -r)"
    } >> ~/.bashrc
    a1=1
  fi
fi
EOF'
